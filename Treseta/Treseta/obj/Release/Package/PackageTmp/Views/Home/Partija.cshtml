<h3 id="igrac2">igrac3 </h3>

<div>
    <label id="igrac1">igrac2</label>
    <canvas id="myCanvas" width="850" height="700" style="border:1px solid #000000;"></canvas>
    <label id="igrac3">igrac4</label>
</div>
<h3 id="igrac0">@ViewData["korisnickoIme"]</h3>


<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
</div>

<div id="chatBox" style="overflow-y: scroll; height:700px; width:250px; border:1px solid #000000; background-color:white;">
    <ul id="discussion"></ul>
</div>
<button id="gi" hidden onclick="location.href='@Url.Action("GlavniIzbornik", "Home", new { korisnik = @ViewData["korisnickoIme"] })'"></button>

<link href="~/Content/Partija.css" rel="stylesheet" />
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.multiplayerHub;
            var name = @Html.Raw(Json.Encode(ViewData["korisnickoIme"]));
            var imeSobe = @Html.Raw(Json.Encode(ViewData["imeSobe"]));
            var c=document.getElementById("myCanvas");
            var ctx=c.getContext("2d");
            var snd = new Audio("data:audio/mp3;base64,");

            //zavrsetak partije
            chat.client.krajIgre = function(timAbodovi , timBbodovi){
                alert("timA = "+timAbodovi + ",timB = "+timBbodovi);
                returnToGlavniIzbornik();
            };

            chat.client.izbaci = function(){
                returnToGlavniIzbornik();
            }
            //poziva se u novom krugu igre
            chat.client.noviKrug = function(){
                ctx.clearRect(260,130,350,300);
            };

            //dobiveni podatci o drubim igracima
            chat.client.podatciOIgracima = function(name1 , poz1, name2, poz2, name3, poz3){
                if(name1 != null){
                    $('#igrac'+poz1).text(name1.imeKorisnika);
                }else{
                    $('#igrac'+poz1).text("igrac"+poz1);
                }
                if(name2 != null){
                    $('#igrac'+poz2).text(name2.imeKorisnika);
                }else{
                    $('#igrac'+poz2).text("igrac"+poz2);
                }
                if(name3 != null){
                    $('#igrac'+poz3).text(name3.imeKorisnika);
                }else{
                    $('#igrac'+poz3).text("igrac"+poz3);
                }
            };

            //korisnik napustio usrid partije
            chat.client.pizda = function (nameL) {
                alert(nameL+"je napustio partiju");
                $('#gi').click();
            };

            //servaer javlja da je korisnik napustio sobu
            chat.client.onUserDisconnected = function (name) {
                objaviPoruku(name, " je napustio sobu", snd);
            };

            //servaer javlja da se korisnik spojio u sobu
            chat.client.onNewUserConnected = function (name , brojIgraca) {
                objaviPoruku(name," se pridruzio sobi", snd)
                $('#igrac'+brojIgraca).text(name);
            };

            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                objaviPoruku(name,message, snd);
            };

            //upozorenja da nisam na potezu
            chat.client.upozorenje = function (msg){
                alert(msg);
            };

            //iscrtavanje bacene karte i broj igraca koji baca
            chat.client.bacenaJe = function ( karta , intBacac , novaRuka){
                var img = new Image();
                img.src = karta.pathSlike;
                img.onload = function (){
                    if(intBacac==0){
                        ctx.drawImage(img,335,250 ,parseInt(karta.sirina),parseInt(karta.visina));
                        ctx.clearRect(0,500,850,200);
                        iscrtajRuku(novaRuka ,ctx);//nacrat karte u ruci
                    }
                    if(intBacac==3){
                        ctx.drawImage(img,285,180,parseInt(karta.sirina),parseInt(karta.visina));
                    }
                    if(intBacac==2){
                        ctx.drawImage(img,335,130,parseInt(karta.sirina),parseInt(karta.visina));
                    }
                    if(intBacac==1){
                        ctx.drawImage(img,425,180,parseInt(karta.sirina),parseInt(karta.visina));
                    }
                }
            }

            //dobije 10 karata i iscrta ih na platno
            chat.client.zapocniIgru = function(ruka){
                iscrtajRuku(ruka,ctx);
            };
            //---------------------------------------------------------------------------------------------------------------
            // Start the connection.
            $.connection.hub.start().done(function () {

                //spojin se u sobu
                chat.server.joinRoom(name , imeSobe);

                $("#myCanvas").click(function(evt) {
                    var  mouseX = parseInt(evt.clientX - c.offsetLeft);
                    var mouseY = parseInt(evt.clientY-c.offsetTop + window.pageYOffset);
                    chat.server.cardClick(mouseX , mouseY , imeSobe);
                });

                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.sendMessage(name,  imeSobe , $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });


        function returnToGlavniIzbornik(){
            document.getElementById("gi").click();

        };

        function iscrtajRuku(ruka , ctx){
            var imgs = [];
            var imagesOK=0;
            for(i=0;i<ruka.length;i++){
                var karta = ruka[i];
                var img = new Image();
                imgs.push(img);
                img.src = karta.pathSlike;
                img.onload = function(){
                    imagesOK++;
                    if (imagesOK>= ruka.length  ){
                        for(j=0;j<ruka.length;j++)
                            ctx.drawImage(imgs[j],parseInt(ruka[j].xPoz),parseInt(ruka[j].yPoz),parseInt(ruka[j].sirina),parseInt(ruka[j].visina));
                    }
                }
            }
        }
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }

        function objaviPoruku(korisnik , poruka , snd){
            beep(snd);
            // Add the message to the page.
            $('#discussion').append('<li><strong>' + htmlEncode(korisnik)
                + '</strong>: ' + htmlEncode(poruka) + '</li>');
            var objDiv = document.getElementById("chatBox");
            objDiv.scrollTop = objDiv.scrollHeight;
        }

        function beep(snd) {
            snd.play();
        }
    </script>
}

