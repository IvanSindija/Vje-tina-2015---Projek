<!DOCTYPE html>
@model Treseta.Models.KorisnikModel
<html>
<head>
    <meta charset="UTF-8">
    <title>Login Box</title>
    <link href="~/Content/LoginStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="vid-container">
        <video id="Video1" class="bgvid back" autoplay="false" muted="muted" preload="auto" loop>
            <source src="http://shortcodelic1.manuelmasiacsasi.netdna-cdn.com/themes/geode/wp-content/uploads/2014/04/milky-way-river-1280hd.mp4.mp4" type="video/mp4">
        </video>
        <div class="inner-container">
            <video id="Video2" class="bgvid inner" autoplay="false" muted="muted" preload="auto" loop>
                <source src="http://shortcodelic1.manuelmasiacsasi.netdna-cdn.com/themes/geode/wp-content/uploads/2014/04/milky-way-river-1280hd.mp4.mp4" type="video/mp4">
            </video>
            <!--kod za login box-->
            @using (Html.BeginForm("GlavniIzbornik", "Home"))
            {
                <div class="box">
                    <h1>Login</h1>
                    @Html.TextBoxFor(m => m.userName, new { @id = "userName" })
                   
                    @Html.TextBoxFor(m => m.password, new { @id = "Password" })
                   
                    <input type="submit" value="Login" />
                    <p>Not a member? <span class="register" onclick="location.href='@Url.Action("Register", "Home", "")'">Sign Up</span></p>
                </div>
                if (ViewBag.Message == 1)
                {
                    <script language="javascript">
                        alert("Neuspjesan login.");
                    </script>
                }
            }
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="js/index.js"></script>



</body>
</html>
